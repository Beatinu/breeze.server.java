<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

    <description>
      Servlet configuration for Breeze tests
    </description>
    <display-name>Servlet configuration for Breeze tests</display-name>

    <!-- Initialize the app configuration upon startup -->
    <listener>
      <listener-class>com.breeze.webtest.AppContextListener</listener-class>
    </listener>  
    
<!--
    <filter>
        <filter-name>Request Dumper Filter</filter-name>
        <filter-class>org.apache.catalina.filters.RequestDumperFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Request Dumper Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
-->

    <!-- Define servlets  -->
  <servlet>
    <servlet-name>Jersey</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
	<init-param>
	    <param-name>jersey.config.server.provider.classnames</param-name>
	    <param-value>
	        northwind.service.BreezeTests
	    </param-value>
	</init-param>
	<init-param>
	    <param-name>jersey.config.server.tracing</param-name>
	    <param-value>ALL</param-value>
	</init-param>
		
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>Northwind</servlet-name>
    <servlet-class>northwind.service.NorthwindTestServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Jersey</servlet-name>
    <url-pattern>/breeze/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Northwind</servlet-name>
    <url-pattern>/northwind/*</url-pattern>
  </servlet-mapping>

</web-app>
